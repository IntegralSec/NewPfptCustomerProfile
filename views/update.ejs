                        <input type="text" class="form-control" placeholder="No response set" id="archivingSe"
                               value="<%= customer.archivingSe %>" name="customer[archivingSe]">
                    </div>
                    <div class="form-group">
                        <label for="accManager">Acc. Manager</label>
                        <input type="text" class="form-control" placeholder="No response set" id="accManager"
                               value="<%= customer.accManager %>"
                               name="customer[accManager]">
                    </div>
                    <div class="form-group">
                        <label for="archivingSe">TEM</label>
                        <input type="text" class="form-control" placeholder="No response set" id="tme" value="<%= customer.tem %>"
                               name="customer[tem]">
                    </div>
                    <div class="form-group">
                        <label for="archivingSe">TAM</label>
                        <input type="text" class="form-control" placeholder="No response set" id="tam" value="<%= customer.tam %>"
                               name="customer[tam]">
                    </div>
