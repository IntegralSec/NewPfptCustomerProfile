<% include partials/header %>

<div class="container">
    <fieldset>
        <form action="/login" method="post">
            <div class="control-group">
                <h4>Login</h4>
                <label class="control-label" for="username">Username</label>
                <div class="controls">
                    <input type="text" id="username" name="login[username]" placeholder="Username" required>
                </div>
            </div>

            <br>

            <div class="control-group">
                <label class="control-label" for="password">Password</label>
                <div class="controls">
                    <input type="password" id="password" name="login[password]" placeholder="Password" required>
                </div>
            </div>

            <br>

            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn btn-primary" id="sign_in">Login</button>
                </div>
            </div>
            <div id="spinner" hidden>
                <center><i class="icon-spinner icon-spin icon-3x"></i></center>
            </div>

            <br>

            <% if(fail == true) { %>
                <h3 id="error-message" class="text-error" style="color: red;">Invalid login credentials</h3>
            <% } %>
        </form>
    </fieldset>
</div>

<% include partials/footer %>