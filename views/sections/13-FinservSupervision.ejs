<!-- Displaying Finserv Supervision -->

<div id="FinservSupervision" class="display-header">
    <h5>
        <a href="#FinservSupervisionContent" data-toggle="collapse" onclick="change_arrow($(this));">
            FINSERV Supervision
            <i class="fa fa-caret-right" aria-hidden="true"></i>
        </a>
    </h5>

    <div id="FinservSupervisionContent" class="collapse">
        <div class="edit pull-right">
            <a href="#/" aria-hidden="true" id="editFinservSupervisionLink" data-toggle="modal">
                <i class="fa fa-pencil-square-o" aria-hidden="true"> Edit</i>
            </a>
        </div>
        <br>

        <form id="finservSupervisionForm" action="../index/<%= encodeURIComponent(customer.name) %>?_method=PUT" method="POST">
            <fieldset id="finservSupervisionFormFieldset" disabled>
                <div class="form-group col-4 response-cell" hidden>
                    <label for="customerName">Customer Name</label>
                    <input type="text" readonly class="form-control" placeholder="No response set" value="<%= customer.name %>" name="finserv_supervision_questions[name]">
                </div>

                <div class="row">
                    <!-- Single questions here -->
                    <div class="form-group col-4 response-cell">
                        <label>What supervision solution are you currently using for digital communication review?</label>
                        <input type="text" class="form-control" placeholder="No response set" value="<%= finserv_supervision_questions.digital_comm_current %>"
                            name="finserv_supervision_questions[digital_comm_current]">
                    </div>
                    <div class="form-group col-4 response-cell">
                        <label>What current pain points do you have with your process and/or supervision solution?</label>
                        <input type="text" class="form-control" placeholder="No response set" value="<%= finserv_supervision_questions.pain_points %>"
                            name="finserv_supervision_questions[pain_points]">
                    </div>
                    <div class="form-group col-4 response-cell">
                        <label>What feature/functionality needs do you not have in current supervision solution?</label>
                        <input type="text" class="form-control" placeholder="No response set" value="<%= finserv_supervision_questions.not_haves %>"
                            name="finserv_supervision_questions[not_haves]">
                    </div>
                    <div class="form-group col-4 response-cell">
                        <label>Which regulatory body/ies oversee your business practices?</label>
                        <input type="text" class="form-control" placeholder="No response set" value="<%= finserv_supervision_questions.regulator %>"
                            name="finserv_supervision_questions[regulator]">
                    </div>
                </div>
                <hr>

                <h5>
                    <a href="#editSupervisionOverview" style="color: mediumvioletred" data-toggle="collapse" onclick="change_arrow($(this));">
                        Current Supervision Overview â€“ Digital Communication Review
                        <i class="fa fa-caret-right" aria-hidden="true"></i>
                    </a>
                </h5>

                <div id="editSupervisionOverview" class="collapse">
                    <div class="row">
                        <div class="form-group col-4 response-cell">
                            <label>Number of Monitored Users</label>
                            <input type="text" class="form-control" placeholder="No response set" value="<%= finserv_supervision_questions.digital_comm.monitored_users %>"
                                name="finserv_supervision_questions[digital_comm][monitored_users]">
                        </div>
                        <div class="form-group col-4 response-cell">
                            <label>Number of Reviewers</label>
                            <input type="text" class="form-control" placeholder="No response set" value="<%= finserv_supervision_questions.digital_comm.reviewers %>"
                                name="finserv_supervision_questions[digital_comm][reviewers]">
                        </div>
                        <div class="form-group col-4 response-cell">
                            <label>Number of Administrators</label>
                            <input type="text" class="form-control" placeholder="No response set" value="<%= finserv_supervision_questions.digital_comm.admins %>"
                                name="finserv_supervision_questions[digital_comm][admins]">
                        </div>
                        <div class="form-group col-4 response-cell">
                            <label>Number of Rules and Lexicons</label>
                            <input type="text" class="form-control" placeholder="No response set" value="<%= finserv_supervision_questions.digital_comm.rules_lexicons %>"
                                name="finserv_supervision_questions[digital_comm][rules_lexicons]">
                        </div>
                        <div class="form-group col-4 response-cell">
                            <label>Number of Whitelist/SPAM Rules</label>
                            <input type="text" class="form-control" placeholder="No response set" value="<%= finserv_supervision_questions.digital_comm.whitelist_rules %>"
                                name="finserv_supervision_questions[digital_comm][whitelist_rules]">
                        </div>
                        <div class="form-group col-4 response-cell">
                            <label>Number of Business Units/Divisions using Supervision</label>
                            <input type="text" class="form-control" placeholder="No response set" value="<%= finserv_supervision_questions.digital_comm.units_using_supervision %>"
                                name="finserv_supervision_questions[digital_comm][units_using_supervision]">
                        </div>
                        <div class="form-group col-4 response-cell">
                            <label>Do your Business Units/Divisions have different supervisory requirements?</label>
                            <input type="text" class="form-control" placeholder="No response set" value="<%= finserv_supervision_questions.digital_comm.different_reqs %>"
                                name="finserv_supervision_questions[digital_comm][different_reqs]">
                        </div>
                    </div>

                    <hr>
                    <h5>
                        <a href="#editSupervision-MessageProfile" style="color: lightseagreen; margin-left: 3em;" data-toggle="collapse" onclick="change_arrow($(this));">
                            Message Sampling Profiles
                            <i class="fa fa-caret-right" aria-hidden="true"></i>
                        </a>
                    </h5>
                    <div id="editSupervision-MessageProfile" class="collapse"></div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
<hr class="rainbow">