                <div id="" class="col-4 response-cell"><p><b>Service Account?</b>
                        <br><%= usage_questions.folder_sync.service_account %></p></div>
            </div>
            <br>
        </div>

        <!-- Transport agent -->
        <h5><a href="#usage-transport" style="color: mediumvioletred" data-toggle="collapse">Transport Agent
                <i class="fa fa-arrows-v" aria-hidden="true"></i>
            </a></h5>

        <div id="usage-transport" class="collapse">
            <div id="usageTransportAgent" class="row">
                <div class="col">
                    <p>Note: This feature requires customer to have .NET 3.5 installed (Transport agent is currently empty)</p></div>
            </div>
            <br>
        </div>

        <!-- Export -->
        <h5><a href="#usage-export" style="color: mediumvioletred" data-toggle="collapse">Export
                <i class="fa fa-arrows-v" aria-hidden="true"></i>
