<h5>
    <a href="#editUsage-PST" style="color: mediumvioletred" data-toggle="collapse" onclick="change_arrow($(this));">
        Content Collector - PSTs
        <i class="fa fa-caret-right" aria-hidden="true"></i>
    </a>
</h5>

<div id="editUsage-PST" class="collapse">
    <div class="row">
        <div class="form-group col-4 response-cell">
            <label>Is the customer interested in CC4PSTs?</label>
            <%- make_custom_dropdown("usage_questions[content_collector_PST][interested_in_CC4FPST]",
                    usage_questions.content_collector_PST.interested_in_CC4FPST, ["Yes", "No"]) %>
        </div>
        <div class="form-group col-4 response-cell">
            <label>Average size?</label>
            <input type="text" class="form-control" placeholder="No response set" value="<%= usage_questions.content_collector_PST.avg_file_size %>"
                name="usage_questions[content_collector_PST][avg_file_size]">
        </div>
        <div class="form-group col-4 response-cell">
            <label>Frequency?</label>
            <input type="text" class="form-control" placeholder="No response set" value="<%= usage_questions.content_collector_PST.frequency %>"
                name="usage_questions[content_collector_PST][frequency]">
        </div>
        <div class="form-group col-4 response-cell">
            <label>Use case?</label>
            <input type="text" class="form-control" placeholder="No response set" value="<%= usage_questions.content_collector_PST.use_case %>"
                name="usage_questions[content_collector_PST][use_case]">
        </div>
    </div>
</div>
<hr>
