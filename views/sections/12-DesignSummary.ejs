<!-- Displaying design summary -->
<div id="designSummary" class="display-header">
    <h5>
        <a href="#designSummaryContent" data-toggle="collapse" onclick="change_arrow($(this));">
            Design Summary
            <i class="fa fa-caret-right" aria-hidden="true"></i>
        </a>
    </h5>

    <div id="designSummaryContent" class="collapse">
        <div class="edit pull-right">
            <a href="#/" aria-hidden="true" id="editDesignSummaryLink" data-toggle="modal">
                <i class="fa fa-pencil-square-o" aria-hidden="true"> Edit</i>
            </a>
        </div>
        <br>

        <form id="designSummaryForm" action="../index/<%= encodeURIComponent(customer.name) %>?_method=PUT" method="POST">
            <fieldset id="designSummaryFormFieldset" disabled>
                <div class="form-group col-4 response-cell" hidden>
                    <label for="customerName">Customer Name</label>
                    <input type="text" readonly class="form-control" placeholder="No response set" value="<%= customer.name %>" name="design_summary_questions[name]">
                </div>
                <div class="form-group col-4 response-cell">
                    <label>Mail system currently in use</label>
                    <%- make_custom_dropdown("design_summary_questions[mail_system_in_use]",
                        design_summary_questions.mail_system_in_use, ["Exchange", "O365"]) %>
                </div>
                <br>

                <div class="form-group">
                    <label>Comments</label>
                    <textarea class="form-control" maxlength="5000" rows="15" name="design_summary_questions[comments]" placeholder="5000 characters max" form="designSummaryForm"><%= design_summary_questions.comments %></textarea>
                </div>
            </fieldset>
        </form>
    </div>
</div>
