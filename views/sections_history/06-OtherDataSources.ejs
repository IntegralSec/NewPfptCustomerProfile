<!-- Displaying other data sources questions -->
<!-- Do not format this file in Visual Studio Code, will bork page. -->

<div id="otherDataSources" class="display-header">
    <h5>
        <a href="#otherDataSourcesContainer" data-toggle="collapse" onclick="change_arrow($(this));">
            Other Data Sources
            <i class="fa fa-caret-right" aria-hidden="true"></i>
        </a>
    </h5>

    <div id="otherDataSourcesContainer" class="collapse">
        <form id="otherDataSourcesForm" autocomplete="off" action="../index/<%= encodeURIComponent(customer.name) %>?_method=PUT" method="POST">
            <fieldset id="otherDataSourcesFormFieldset" disabled>
                <div class="form-group col-4 response-cell" hidden>
                    <label for="customerName">Customer Name</label>
                    <input type="text" readonly class="form-control" placeholder="No response set" value="<%= customer.name %>" name="other_data_source_questions[name]">
                </div>

                <% include OtherDataSources/EditOtherDataSourcesCustom.ejs %>
                <% include OtherDataSources/EditOtherDataSourcesSocial.ejs %>
                <% include OtherDataSources/EditOtherDataSourcesEnterprise.ejs %>

                <br>
                <div class="form-group">
                    <label>Comments</label>
                    <textarea class="form-control" maxlength="5000" rows="5" name="other_data_source_questions[comments]" placeholder="5000 characters max" form="otherDataSourcesForm"><%= other_data_source_questions.comments %></textarea>
                </div>
            </fieldset>
        </form>
    </div>
</div>
<hr class="rainbow">
