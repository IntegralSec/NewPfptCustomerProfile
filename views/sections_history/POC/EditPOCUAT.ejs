<h5>
    <a href="#editPOCUAT" style="color: mediumvioletred" data-toggle="collapse" onclick="change_arrow($(this));">
        UAT
        <i class="fa fa-caret-right" aria-hidden="true"></i>
    </a>
</h5>

<div id="editPOCUAT" class="collapse">
    <div class="row">
        <div class="form-group col-4 response-cell">
            <label>Does the customer need/require a UAT or Testing Archive account?</label>
            <%- make_custom_dropdown("poc_questions[UAT][need_UAT]",
                    poc_questions.UAT.need_UAT, ["Yes", "No"]) %>
        </div>
        <div class="form-group col-4 response-cell">
            <label>Will the UAT be forever?</label>
            <%- make_custom_dropdown("poc_questions[UAT][UAT_forever]",
                    poc_questions.UAT.UAT_forever, ["Yes", "No"]) %>
        </div>
        <div class="form-group col-4 response-cell">
            <label>Will the UAT be production data, or lab data?</label>
            <%- make_custom_dropdown("poc_questions[UAT][is_UAT_production_or_lab]",
                    poc_questions.UAT.is_UAT_production_or_lab, ["Production data", "Lab data"]) %>
        </div>
        <div class="form-group col-4 response-cell">
            <label>What is the primary purpose of the UAT?</label>
            <input type="text" class="form-control" placeholder="No response set" value="<%= poc_questions.UAT.primary_purpose %>" name="poc_questions[UAT][primary_purpose]">
        </div>
    </div>
</div>
