<h5>
    <a href="#editapplianceDetails-ForSE" style="color: mediumvioletred" data-toggle="collapse" onclick="change_arrow($(this));">
        For SE
        <i class="fa fa-caret-right" aria-hidden="true"></i>
    </a>
</h5>

<div id="editapplianceDetails-ForSE" class="collapse">
    <div class="row">
        <div class="form-group col-4 response-cell">
            <label>How many of each purpose:</label>
        </div>
        <div class="form-group col-4 response-cell">
            <label style="margin-left: 3em;">UI</label>
            <input type="text" class="form-control" placeholder="No response set" value="<%= appliance_questions.purposes.ui %>" name="appliance_questions[purposes][ui]">
        </div>
        <div class="form-group col-4 response-cell">
            <label style="margin-left: 3em;">Export</label>
            <input type="text" class="form-control" placeholder="No response set" value="<%= appliance_questions.purposes.export %>" name="appliance_questions[purposes][export]">
        </div>
        <div class="form-group col-4 response-cell">
            <label style="margin-left: 3em;">Archiving</label>
            <input type="text" class="form-control" placeholder="No response set" value="<%= appliance_questions.purposes.archiving %>" name="appliance_questions[purposes][archiving]">
        </div>
        <div class="form-group col-4 response-cell">
            <label style="margin-left: 3em;">Stubbing</label>
            <input type="text" class="form-control" placeholder="No response set" value="<%= appliance_questions.purposes.stubbing %>" name="appliance_questions[purposes][stubbing]">
        </div>
        <div class="form-group col-4 response-cell">
            <label>Archive proxy?</label>
            <%- make_custom_dropdown("appliance_questions[archive_proxy]",
                    appliance_questions.archive_proxy, ["Yes", "No"]) %>
        </div>
        <div class="form-group col-4 response-cell">
            <label>Transport agent</label>
            <input type="text" class="form-control" placeholder="No response set" value="<%= appliance_questions.transport_agent %>"
                name="appliance_questions[transport_agent]">
        </div>
        <div class="form-group col-4 response-cell">
            <label>Outlook view manager</label>
            <input type="text" class="form-control" placeholder="No response set" value="<%= appliance_questions.outlook_view_manager %>"
                name="appliance_questions[outlook_view_manager]">
        </div>
    </div>
</div>
